<div class = "row my-5 justify-content-center">
    <div class = "col-10 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3><%=title%></h3>
            </div>
            <div class="card-body">
                <form name="frm">
                    <input class = "form-control mb-3" name="email" value="blue@test.com">
                    <input class="form-control mb-3" name="pass" value="12341234">
                    <button class="btn btn-primary w-100">로그인</button>
                </form>
                <div class="text-end mt-3">
                    <a href="/users/join">회원가입</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--import 하려면 type 을 module 로 설정해두어야함-->
<!--firebase에 있는 문서에서 웹용 인증 클릭 후 import 끌어오기-->
<script type="module">
    // * script 타입이 module로 되어있어야 파이어베이스의 config.js를 import해올 수 있다.
    import {app} from '/javascripts/config.js'
    // 파이어베이스 - 문서 - 기초 - 웹용인증 import { getAuth } from "firebase/auth"
    import {getAuth, signInWithEmailAndPassword} from "https://www.gstatic.com/firebasejs/10.13.2/firebase-auth.js";
    const auth=getAuth(app);

    // * 로그인 버튼을 클릭한 경우
    $(frm).on("submit", function(e) {
        e.preventDefault();

        // 이메일, 패스워드 가져오기
        const email=$(frm.email).val();
        const pass=$(frm.pass).val();
        
        // 로그인 시도 함수
        // * 파라미터 순서 -> auth email pass
        // then : 성공했을때, success 객체로 어떤 파라미터를 가져올 것이다.
        signInWithEmailAndPassword(auth, email, pass)
        .then(success=> {
            alert("로그인 성공~");

            // 로그인 후 이름 설정
            sessionStorage.setItem("email", email);
            
            // 파이어베이스의 사용자 UID 가져오기
            // success.user.uid
            sessionStorage.setItem("uid", success.user.uid);

            if(sessionStorage.getItem("target")) {
                location.href = sessionStorage.getItem("target");
            } else {
                location.href = "/";
            }

            // 헷갈리니 삭제
            // // 로그인 후 장바구니 넣었던게 있으면 그 주소를 다시 꺼내서 이동
            // if(sessionStorage.getItem("target")) {
            //     location.href=sessionStorage.getItem("target");
            // }else {
            //     // 로그인 성공 시, "/"페이지로 이동
            //     location.href="/";
            // }

            // 메인페이지 이동 링크
            // location.href="/";
            
        }).catch(error=> { // 실패했을때 : email or pass 존재하지 않을때, 일치하지 않을때
            alert("로그인 실패!" + error.message);
        });
    });

</script>