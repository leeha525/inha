  <script>
    // 로그인 후 로그인 링크 대신 아이디를 나타나게 하기 위해서 이름 가져오기
    // sessionStorage에 저장해두었던 email 호출
    // Email값이 들어간 후에는 바뀌면 안되기 때문에 const로 지정
    const email = sessionStorage.getItem("email");
    const uid = sessionStorage.getItem("uid");

    if(email) { // 이메일이 있다면
      // 로그인 상태
      // #은 id 호출 $("#login").hide(); / .show(); / .html(email);
      $("#login").hide();
      $("#mypage, #logout, #cart").show();
      $("#mypage").html(email);
    }else {
      // 로그아웃 상태
      $("#login").show();
      $("#mypage, #logout, #cart").hide();
    }

    $("#logout").on("click", function(e) {
      e.preventDefault();
      // confirm : 물어보기
      if(confirm("정말로 로그아웃 하시겠습니까?")) { 
        sessionStorage.clear();
        // session 정보 삭제 후 메인페이지로 이동
        location.href="/";
      }
    });
  </script>