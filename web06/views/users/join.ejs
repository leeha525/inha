<div class = "row my-5 justify-content-center">
    <div class = "col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3><%=title%></h3>
            </div>
            <div class="card-body">
                <form name="frm">
                    <input class = "form-control mb-3" name="email" value="blue@test.com">
                    <input class="form-control mb-3" name="pass" value="12341234">
                    <button class="btn btn-primary w-100">회원가입</button>
                </form>
                <div class="text-end mt-3">
                    <a href="/users/login">로그인하기</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--import 하려면 type 을 module 로 설정해두어야함-->
<!--firebase에 있는 문서에서 웹용 인증 클릭 후 import 끌어오기-->
<script type="module">
    import {app} from '/javascripts/config.js'
    import {getAuth,createUserWithEmailAndPassword} from "https://www.gstatic.com/firebasejs/10.14.1/firebase-auth.js";
    const auth=getAuth(app);

    // 회원가입 버튼을 클릭한 경우
    $(frm).on("submit", function(e) {
        e.preventDefault();
        const email=$(frm.email).val();
        const pass=$(frm.pass).val();
        
        createUserWithEmailAndPassword(auth, email, pass).then(success=> {
            alert("회원가입 성공~")
            // 메인페이지 이동 링크
            location.href="/users/login";

        }).catch(error=> {
            alert("회원가입 실패!" + error.message);
        })
    })

</script>