<div class="my-5">
    <h1 class="text-center mb-5"><%=title%></h1>
    <div class="text-end">
        <button id="write" class="btn btn-primary px-5">글쓰기</button>
    </div>
    <div id="div_bbs" class="mt-3"></div>
    <div class="text-center">
        <button id="prev" class="btn btn-primary">이전</button>
        <span id="page" class="px-3">1/2</span>
        <button id="next" class="btn btn-primary">다음</button>
    </div>
</div>
<script id="temp_bbs" type="x-handlebars-template">
    <table class="table table-hover table-striped">
        <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Email</th>
            <th>Date</th>
        </tr>    
        {{#each .}}
        <tr>
            <td>{{seq}}</td>
            <td><div class="ellipsis"><a href = "/bbs/{{id}}">{{title}}</a></div></td>
            <td>{{email}}</td>
            <td><div class="ellipsis">{{date}}</div></td>
        </tr>
        {{/each}}
    </table>
</script>
<script type="module">
    import {app} from '/javascripts/config.js'
    import {getFirestore, collection, addDoc }  from "https://www.gstatic.com/firebasejs/10.13.2/firebase-firestore.js";
    // - getFirestore: Firebase Firestore 데이터베이스를 초기화하고 인스턴스를 가져옴
    // - collection: Firestore의 특정 컬렉션에 접근하기 위한 함수
    // - addDoc: Firestore 컬렉션에 새 문서를 추가하는 함수
    import {onSnapshot, where, orderBy, query}  from "https://www.gstatic.com/firebasejs/10.13.2/firebase-firestore.js";
    // - onSnapshot: 실시간 데이터 변경을 감지하고 업데이트를 반영하는 함수
    // - where: Firestore 쿼리 조건을 설정하기 위한 함수
    // - orderBy: 데이터를 특정 필드 기준으로 정렬하기 위한 함수
    // - query: Firestore에서 데이터 조건 및 정렬을 포함한 쿼리를 생성하기 위한 함수
    const db = getFirestore(app);

    // 글쓰기 버튼을 클릭한 경우
    $("#write").on("click", function(){
        if(uid){
            location.href="/bbs/insert";
        }else{
            sessionStorage.setItem("target", window.location.href);
            location.href="/users/login";
        }
    });
    
    // 게시글 목록
    let rows = [];
    const q = query(collection(db, "bbs"), orderBy("date", "desc"));
    onSnapshot(q, snapshot=> {
        let count=snapshot.size;
        let no = 0;
        snapshot.forEach(row=> {
            rows.push({no:no++, id: row.id, ...row.data()});
        });
        getList();
    });
    
    let page=1;
    let size=5;
    // 페이지 출력 함수
    function getList(){
        const data = [];
        
        // 1page : no:1~5 2page: no:6~10
        // const start = (page-1) * size;
        // const end = (page * size) -1;
        const start = (page-1) * size + 1;
        const end = (page * size);

        rows.forEach(row=>{
            
            // 수업에서 한 내용
            // const start = (page-1) * size + 1;
            // const end = (page * size);
            if(row.no >= start && row.no <= end) data.push({...row, seq:rows.length-row.no + 1});
            // if(row.no >= start && row.no <= end) data.push({seq:rows.length-row.no, ...row});


            const temp=Handlebars.compile($("#temp_bbs").html());
            $("#div_bbs").html(temp(data));

            const last = Math.ceil(rows.length/size);
            $("#page").html(`${page} / ${last}`);

            if(page==1) $("#prev").attr("disabled", true);
            else $("#prev").attr("disabled", false);

            if(page==last) $("#next").attr("disabled", true);
            else $("#next").attr("disabled", false);
        });
    }

    $("#next").on("click", function(){
        page++;
        getList();
    });

    $("#prev").on("click", function(){
        page--;
        getList();
    });
</script>